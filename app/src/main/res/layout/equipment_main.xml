<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <include
        layout="@layout/home_head"/>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00af89"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center|bottom">
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="2dp">
                <com.nbhero.DIYview.AboutGas
                    android:id="@+id/equipment_main_ll_pro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                </com.nbhero.DIYview.AboutGas>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:text="油量：100%"
                android:gravity="center"
                android:textColor="#ff0"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <LinearLayout
                android:textColor="#ff0"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" >

                <TextView

                    android:gravity="center"
                    android:textSize="16dp"
                    android:text="运行中"
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:gravity="center"
                android:textSize="14dp"
                android:text="2016年09月26日 星期四 08:01"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <com.nbhero.DIYview.ProView
            android:id="@+id/zlz"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:text="打开喷香机"
                    android:gravity="center"
                    android:textColor="@color/headcolor"
                    android:id="@+id/equipment_txt_state"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </LinearLayout>


            <com.nbhero.DIYview.SwitchOpen
                android:id="@+id/switchzlz"
                android:layout_width="90dp"
                android:layout_height="40dp" />

        </LinearLayout>
        <LinearLayout
            android:background="@drawable/top_line"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="1dp">

            <TextView
                android:textStyle="bold"
                android:id="@+id/equipment_txt_time"
                android:gravity="center"
                android:text="运行时长"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/right_line"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/equipment_txt_hold"
                android:gravity="center"
                android:text="工作时段"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/right_line"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/equipment_txt_equipment"
                android:gravity="center"
                android:text="设备信息"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
