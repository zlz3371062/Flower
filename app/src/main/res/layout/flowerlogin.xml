<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backcolor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingTop="60dp"
        android:gravity="center">
        
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/loginlogo"
            android:scaleType="fitCenter"/>

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/loginet_ll"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingLeft="20dp">
                
                <ImageView
                    android:src="@drawable/loginuser"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <EditText
                    android:layout_marginLeft="10dp"
                    android:id="@+id/login_et_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:hint="  账号"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f0f0f0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingLeft="20dp">

                <ImageView
                    android:src="@drawable/loginpassword"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <EditText
                    android:inputType="textPassword"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/login_et_password"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:hint="  密码"
                    />

                <ImageView
                    android:layout_marginRight="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/eye"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/login_img_see" />

            </LinearLayout>

        </LinearLayout>


    <TextView
        android:id="@+id/login_btn_login"
        android:gravity="center"
        android:text="登陆"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/btnback"/>


    <TextView
        android:id="@+id/login_btn_forget"
        android:layout_marginRight="10dp"
        android:gravity="right|center"
        android:text="忘记密码"
        android:textSize="16dp"
        android:textColor="#1ba0de"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="bottom|center"
        android:padding="20dp">
  
        <TextView
            android:id="@+id/login_btn_reginster"
            android:gravity="center"
            android:textColor="#1ba0de"
            android:textSize="16dp"
            android:text="注册"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/login_btnforregister"/>


    </LinearLayout>




</LinearLayout>
