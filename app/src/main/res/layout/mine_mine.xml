<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backcolor"
    android:orientation="vertical"
    android:baselineAligned="false">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/fragment_mine_btn_about"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:background="@drawable/top_line"
                >

                <LinearLayout

                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"

                    >

                    <com.nbhero.DIYview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/circleImageView"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/loginuser"
                        app:border_width="2dp"
                        app:border_color="#ccc"
                        >
                    </com.nbhero.DIYview.CircleImageView>
                    <!--<ImageView-->
                    <!--android:layout_marginTop="20dp"-->
                    <!--android:layout_marginLeft="15dp"-->
                    <!--android:scaleType="centerInside"-->
                    <!--android:layout_width="80dp"-->
                    <!--android:layout_height="80dp"-->
                    <!--android:src="@drawable/loginuser"/>-->
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/fragment_mine_txt_username"
                        android:text="用户名"
                        android:textSize="18dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/fragment_mine_txt_userphone"
                        android:text="11111111111"
                        android:textSize="18dp"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />


                </LinearLayout>


                <ImageView
                    android:layout_gravity="right"
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/go"
                    android:layout_marginRight="20dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/top_line"
                android:orientation="vertical"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                >

                <LinearLayout
                    android:id="@+id/fragment_mine_ll_news"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="@drawable/bottom_line"
                    android:gravity="center">

                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/news"/>
                    <TextView
                        android:id="@+id/fragment_mine_txt_news"
                        android:layout_marginLeft="10dp"
                        android:textSize="18dp"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="消息"/>

                    <ImageView
                        android:layout_gravity="right"
                        android:layout_width="8dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/red_point"
                        android:layout_marginRight="10dp"
                        />

                    <ImageView
                        android:layout_gravity="right"
                        android:layout_width="12dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/go"
                        android:layout_marginRight="20dp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/fragment_mine_ll_equipment"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="@drawable/bottom_line"
                    android:gravity="center">

                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/list"/>
                    <TextView
                        android:id="@+id/fragment_mine_txt_equipments"
                        android:layout_marginLeft="10dp"
                        android:textSize="18dp"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="设备列表"/>

                    <ImageView
                        android:layout_gravity="right"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/red_point"
                        android:layout_marginRight="10dp"
                        android:visibility="invisible"
                        />

                    <ImageView
                        android:layout_gravity="right"
                        android:layout_width="12dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/go"
                        android:layout_marginRight="20dp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/fragment_mine_ll_setting"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="@drawable/bottom_line"
                    android:gravity="center">

                    <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/setting"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:textSize="18dp"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="设置"/>

                    <ImageView
                        android:layout_gravity="right"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/red_point"
                        android:layout_marginRight="10dp"
                        android:visibility="invisible"
                        />

                    <ImageView
                        android:layout_gravity="right"
                        android:layout_width="12dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/go"
                        android:layout_marginRight="20dp"
                        />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/top_line"
                android:orientation="vertical"
                android:paddingTop="1dp">
                <LinearLayout
                    android:id="@+id/fragment_mine_ll_advice"
                    android:background="@drawable/bottom_line"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/mine_advice"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:textSize="18dp"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="意见反馈"/>

                    <ImageView
                        android:visibility="invisible"
                        android:layout_gravity="right"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/red_point"
                        android:layout_marginRight="10dp"
                        />

                    <ImageView
                        android:layout_gravity="right"
                        android:layout_width="12dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/go"
                        android:layout_marginRight="20dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fragment_mine_ll_about"
                    android:background="@drawable/bottom_line"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/aboout"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:textSize="18dp"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="关于"/>

                    <ImageView
                        android:visibility="invisible"
                        android:layout_gravity="right"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/red_point"
                        android:layout_marginRight="10dp"
                        />

                    <ImageView

                        android:layout_gravity="right"
                        android:layout_width="12dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/go"
                        android:layout_marginRight="20dp"
                        />

                </LinearLayout>

            </LinearLayout>



            <!--内容结束  -->

        </LinearLayout>



    </ScrollView>


</LinearLayout>