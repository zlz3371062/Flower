<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context="com.nbhero.flower.MainActivity"
    android:orientation="vertical"
    android:background="@color/backcolor">
    <include

        layout="@layout/home_head"/>

    <FrameLayout
        android:id="@+id/home_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >


    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@drawable/top_line">
        <!--适配屏幕 -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/main_equipment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/main_img_equipment"
                    android:padding="3dp"
                    android:src="@drawable/taboneon"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/main_txt_equipment"
                    android:layout_marginBottom="1dp"
                    android:textSize="12dp"
                    android:text="设备"
                    android:textColor="@color/headcolor"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/main_map"
                >
                <ImageView
                    android:id="@+id/main_img_map"
                    android:padding="3dp"
                    android:src="@drawable/tabtwooff"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/main_txt_map"
                    android:layout_marginBottom="1dp"
                    android:textSize="12dp"
                    android:text="地图"
                    android:textColor="@color/textcolor"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/main_find"
                >
                <ImageView
                    android:id="@+id/main_img_find"
                    android:padding="3dp"
                    android:src="@drawable/tabthreeoff"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/main_txt_find"
                    android:layout_marginBottom="3dp"
                    android:textSize="12dp"
                    android:text="发现"
                    android:textColor="@color/textcolor"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/main_mine"
                >
                <ImageView
                    android:id="@+id/main_img_mine"
                    android:padding="3dp"
                    android:src="@drawable/tabfouroff"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/main_txt_mine"
                    android:layout_marginBottom="1dp"
                    android:textSize="12dp"
                    android:text="我"
                    android:textColor="@color/textcolor"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"/>

            </LinearLayout>





        </LinearLayout>




        <!--适配屏幕 -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
